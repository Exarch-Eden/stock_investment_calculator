{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "jsx": "react-jsx",  // Add this line for JSX support
    "lib": ["dom", "dom.iterable", "esnext"],  // Add these for browser APIs
    "moduleResolution": "node"  // Add this for module resolution
  },
  "include": ["src", "**/*.ts", "**/*.tsx"]
}